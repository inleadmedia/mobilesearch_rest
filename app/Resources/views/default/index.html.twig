        "key":"b11f8f062416fcbd7348ac39ca78e78b3b740cdf"
    },
    "body":{
        "nid":2,
        "agency":"100000",
        "type": "films",
        "fields": {
            "title": {
                "name": "Title",
                "value": "Original title",
                "attr": ["plain text", "attr 2"]
            },
            "images": {
